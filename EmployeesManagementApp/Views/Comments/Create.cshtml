@model EmployeesManagementApp.ViewModel.CommentCreateViewModel

@{
    ViewData["Title"] = "Create";
    
}

<h2>Create</h2>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNumber" class="control-label"></label>
                <select class="form-control" asp-for="EmployeeNumber">
                    @foreach (var item in Model.EmployeeList)
                    {
                        if (item.Key == 0000)
                        {
                            <option value="@item.Key" selected>@item.Key @item.Value</option>
                        }
                        <option value="@item.Key">@item.Key @item.Value[0] @item.Value[1] </option>
                    }
                </select>              
                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control"  value="@DateTime.Now"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <textarea asp-for="Post" class="form-control" style="height:100px;overflow:auto; text-wrap:normal;" ></textarea>
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

