@model EmployeesManagementApp.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Privacy Policy";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    </environment>
</head>
<body style=" height:100vh;">
    
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3" style="margin-top:100px; border-style: outset; padding:20px;">
                    <form method="post">
                        <div>                            
                            <img src="~/images/beldenLogo.png" style="width:250px;" />
                        </div>
                       
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group center-block">
                            <label asp-for="Email"></label><br />
                            <input class="form-control" asp-for="Email" style="width:100%; " />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group center-block">
                            <label asp-for="Password"></label><br />
                            <input class="form-control" asp-for="Password" style="width:100%;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary center-block" style="width:40%;">Login</button>
                    </form>
                </div>
            </div>
            <div>
                <img src="~/images/beldenLogo1.png" style="width:50%;" />
            </div>
   </div>
   
</body>

</html>